
<project name="java-ci-pipeline">
    
    <target name="init">
        <mkdir dir="classes" />
        <mkdir dir="build" />
    </target>
    
    
    <target name="compile" depends="init">
        <javac srcdir="src/java/ci/pipeline" destdir="classes" />
    </target>
    

    <target name="build" depends="compile">
        <jar destfile="build/JavaCiPipeline.jar" basedir="classes" />
    </target>

    
    <target name="clean">
        <delete dir="classes" />
        <delete dir="build" />
    </target>

</project>

